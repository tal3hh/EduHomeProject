@model List<BioTable>

<h3 style="text-align: center">Bio Table</h3>

<a asp-action="Create" asp-controller="BioTable" asp-area="Admin" class="btn btn-primary" style="float: right">Create</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Adress :</th>
            <th>Email :</th>
            <th>SiteLik :</th>
            <th>PhoneNumber :</th>
            <th>Duzenleme</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model[i].Adress</td>
                <td>@Model[i].Email</td>
                <td>@Model[i].SiteLink</td>
                <td>@Model[i].PhoneNumber</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-dark" asp-action="Details" asp-controller="BioTable" asp-area="Admin" asp-route-id="@Model[i].Id">Details</a>

                        <a class="btn btn-warning" asp-action="Update" asp-controller="BioTable" asp-area="Admin" asp-route-id="@Model[i].Id">Update</a>

                        <a class="btn btn-danger" asp-action="Delete" asp-controller="BioTable" asp-area="Admin" asp-route-id="@Model[i].Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
