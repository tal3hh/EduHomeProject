@model (CourseFeatures courseFeatures, List<Course> course)

<h3 style="text-align:center">CourseFeaturs Update</h3>

<form method="post" asp-action="Update" asp-area="Admin" asp-controller="CourseFeatures">

    <div class="mb-3">
        <label class="form-label">Course Title</label>
        <select asp-for="courseFeatures.CourseId" asp-items="@(new SelectList(Model.course, "Id", "Title"));" class="form-control"></select>
    </div>
    <div class="mb-3">
        <label asp-for="courseFeatures.Start" class="form-label">Start :</label>
        <input asp-for="courseFeatures.Start" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="courseFeatures.Language" class="form-label">Language :</label>
        <input asp-for="courseFeatures.Language" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="courseFeatures.ClassDuration" class="form-label">ClassDuration :</label>
        <input asp-for="courseFeatures.ClassDuration" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="courseFeatures.Assesments" class="form-label">Assesments :</label>
        <input asp-for="courseFeatures.Assesments" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="courseFeatures.SkillLevel" class="form-label">SkillLevel :</label>
        <input asp-for="courseFeatures.SkillLevel" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="courseFeatures.Students" class="form-label">Students :</label>
        <input asp-for="courseFeatures.Students" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="courseFeatures.Duration" class="form-label">Duration :</label>
        <input asp-for="courseFeatures.Duration" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="courseFeatures.CourseFee" class="form-label">CourseFee :</label>
        <input asp-for="courseFeatures.CourseFee" type="text" class="form-control" />
    </div>
    <div class="text-danger" asp-validation-summary="All">

    </div>
    <div class="d-flex">
        <input type="hidden" asp-for="courseFeatures.Id" />
        <button class="btn btn-primary">Yenile</button>

        <a asp-action="CourseFeaturesList" asp-controller="CourseFeatures" asp-area="Admin" class="btn btn-light">Cancel</a>
    </div>
</form>