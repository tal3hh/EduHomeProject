@model List<CourseFeatures>
<h3 style="text-align: center">CourseFeatures Table</h3>

<a asp-action="Create" asp-controller="CourseFeatures" asp-area="Admin" class="btn btn-primary" style="float: right">Create</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Course Title:</th>
            <th>Start:</th>
            <th>Language:</th>
            <th>Students:</th>
            <th>Duration:</th>
            <th>CourseFee:</th>
            <th>Assesments:</th>
            <th>SkillLevel:</th>
            <th>ClassDuration:</th>
            <th>Duzenleme:</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model[i].Course.Title</td>
                <td>@Model[i].Start</td>
                <td>@Model[i].Language</td>
                <td>@Model[i].Students</td>
                <td>@Model[i].Duration</td>
                <td>@Model[i].CourseFee</td>
                <td>@Model[i].Assesments</td>
                <td>@Model[i].SkillLevel</td>
                <td>@Model[i].ClassDuration</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-dark" asp-action="Details" asp-controller="CourseFeatures" asp-area="Admin" asp-route-id="@Model[i].Id">Details</a>

                        <a class="btn btn-warning" asp-action="Update" asp-controller="CourseFeatures" asp-area="Admin" asp-route-id="@Model[i].Id">Update</a>

                        <a class="btn btn-danger" asp-action="Delete" asp-controller="CourseFeatures" asp-area="Admin" asp-route-id="@Model[i].Id">Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
