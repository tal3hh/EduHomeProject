@model Testimonial

<h3 style="text-align:center">Service Update</h3>

<form method="post" asp-action="Update" asp-area="Admin" asp-controller="Testimonial">
    <div>
        <label asp-for="Fullname" class="form-label">Fullname :</label><br />
        <input asp-for="Fullname" type="text" class="form-control" />
    </div>
    <div>
        <label asp-for="Description" class="form-label">Description :</label><br />
        <input asp-for="Description" type="text" class="form-control" />
    </div>
    <div>
        <label asp-for="Work" class="form-label">Work :</label><br />
        <input asp-for="Work" type="text" class="form-control" />
    </div>
    <div class="text-danger" asp-validation-summary="All">

    </div>
    <br />

    <div class="d-flex">
        <button class="btn btn-primary">Yenile</button>

        <a asp-action="TestimonialList" asp-controller="Testimonial" asp-area="Admin" class="btn btn-light">Cancel</a>
    </div>
</form>