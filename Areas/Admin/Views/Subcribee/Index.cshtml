@model List<Subscribee>

<h3 style="text-align: center">Subscribee Table</h3>


<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Email :</th>
            <th>IsActived :</th>
            <th>Duzenleme</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Email</td>
                <td>@(Model[i].IsActived ? "Aktivdir" : "Aktiv Deyil")</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Subcribee" asp-area="Admin" asp-route-id="@Model[i].Id">Update</a>

                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Subcribee" asp-area="Admin" asp-route-id="@Model[i].Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>