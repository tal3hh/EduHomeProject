@model (EventTeacher events, List<EventTeacher> teachers, Contact contact)
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">

                    <div class="event-details-img">
                        <img src="~/img/event/@Model.events.Event.Image" alt="event-details">
                        <div class="event-date">
                            <h3>@Model.events.Event.Date.ToString("dd") <span>@Model.events.Event.Date.ToString("MMM")</span></h3>
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>@Model.events.Event.Title</h2>
                        <ul>
                            <li><span>time:</span>  @Model.events.Event.StartDate AM - @Model.events.Event.EndDate PM</li>
                            <li><span>venue:</span>  @Model.events.Event.Location</li>
                        </ul>
                        <p>
                            @Model.events.Event.Description
                        </p>
                        <div class="speakers-area fix">
                            <h4>Teachers</h4>
                            @foreach (var teacher in Model.teachers)
                            {
                <div class="single-speaker">
                    <div class="speaker-img">
                        <img src="~/img/event/speaker1.jpg" alt="speaker">
                    </div>
                    <div class="speaker-name">
                        <h5>@teacher.Teacher.Fullname</h5>
                        <p>@teacher.Teacher.Work </p>
                    </div>
                </div>}

                        </div>
                    </div>
                    <!-- Commnet -->
                    <div class="reply-area">
                        <h3>LEAVE A message</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" asp-action="EventDetails" asp-controller="Event" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p> <span asp-validation-for="contact.Name" class="text-danger"></span>
                                    <input type="text" asp-for="contact.Name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p> <span asp-validation-for="contact.Eamil" class="text-danger"></span>
                                    <input type="email" asp-for="contact.Eamil">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p> <span asp-validation-for="contact.Subject" class="text-danger"></span>
                                    <input type="text" asp-for="contact.Subject">
                                    <p>Massage</p> <span asp-validation-for="contact.Message" class="text-danger"></span>
                                    <textarea asp-for="contact.Message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <br />
                            <div>
                                <button type="submit" class="btn btn-warning"><span>Gonder Mesaji</span></button>
                            </div>
                            <div class="text-danger" asp-validation-summary="All">

                            </div>

                        </form>
                    </div>

                </div>
            </div>

            @await Component.InvokeAsync("SideBarCourse")

        </div>
    </div>
</div>
<!-- Event Details End -->
<!-- Subscribe Start -->
@await Component.InvokeAsync("Subscribe")
